<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class="container-fluid">
  <div class="form-group col-xs-11">
    <input id="url" type="text" class="form-control col-xs-11" placeholder="ENTER URL here">
  </div>
  <button id="send-url" class="btn btn-default col-xs-1" data-loading-text="Loading...">Submit</button>
  <div id="ctn"></div>
</div>

<script id="metric-template" type="text/x-handlebars-template">
 <div id="\{{tail}}" class="metric" role="tabpanel">

    <ul class="nav nav-tabs" role="tablist">
      <li role="score">
        <a data-target="score" role="tab" data-toggle="tab">Social Cake</a>
      </li>
      <li role="data" class="active">
        <a data-target="data" role="tab" data-toggle="tab">Data</a>
      </li>
    </ul>

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane score"></div>

      <div role="tabpanel" class="tab-pane data active">

        <ul class="list-group">
          \{{#each counters}}
          <li class="list-group-item item-\{{@key}}">
            <span class="badge \{{@key}}">\{{parseValue @key this}}</span>

            \{{#if this.details}}
            <a class="name collapser">\{{fancyName @key}}</a>
            <ul class="list-group collapse details">

              \{{#each this.details}}
              <li class="list-group-item">
                <span class="badge">\{{parseValue @key this}}</span>
                \{{fancyName @key}}
              </li>
              \{{/each}}

            </ul>
            \{{else}}
              <span class="name">\{{fancyName @key}}</span>
            \{{/if}}

          </li>
          \{{/each}}
        </ul>

      </div>
    </div>

  </div>
</script>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

